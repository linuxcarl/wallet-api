{
  "name": "wallet-api",
  "version": "1.0.0",
  "description": "API wallet",
  "main": "app.js",
  "scripts": {
    "tsc": "tsc",
    "start": "NODE_ENV=production node ./dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/app.ts",
    "tslint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"./src/**/*.{ts}\"",
    "prettier:write": "npm run prettier:base -- --write \"./src/**/*.ts\"",
    "test": "cross-env NODE_ENV=test jest --coverage --testTimeout=50000",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linuxcarl/wallet-api.git"
  },
  "author": "Carlos Enirque Ram√≠rez Flores",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/linuxcarl/wallet-api/issues"
  },
  "homepage": "https://github.com/linuxcarl/wallet-api#readme",
  "dependencies": {
    "@types/node": "^14.11.2",
    "awilix": "^4.2.6",
    "awilix-express": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint && npm run prettier:write",
      "pre-push": "npm run tslint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
